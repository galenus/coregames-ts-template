{
  "name": "@coreg-ts/tools",
  "version": "0.1.0",
  "description": "Tools helping with development of TypeScript scripts for Core Games (https://www.coregames.com/) using TypeScriptToLua (https://typescripttolua.github.io/).",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galenus/games-on-core-with-ts.git"
  },
  "author": "Michael Donkhin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/galenus/games-on-core-with-ts/issues"
  },
  "homepage": "https://github.com/galenus/games-on-core-with-ts#readme",
  "scripts": {
    "gen-api": "ts-node tools/api-generator/index.ts --output ./core-api/core-api-definitions",
    "sync": "ts-node tools/sync/index.ts",
    "lint": "tsc --noEmit -p ../../tsconfig.lint.json && eslint --ext .ts --fix src/ plugins/ tools/",
    "build-lua": "tstl -p tsconfig.lua.json && npm run sync -- --config ./tsconfig.lua.json --direction ts2script",
    "build-init-tool": "microbundle -i ./tools/init/src/index.ts -o ./tools/init/index.js --no-pkg-main -f cjs --target node --no-sourcemap --generateTypes false"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "biguint-format": "^1.0.2",
    "flake-idgen": "^1.4.0",
    "simple-git": "^2.42.0",
    "yargs": "^17.1.0"
  }
}
